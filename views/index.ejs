    <div class="container" style="margin-top: 50px">
      <h1 >TWATTTWATT</h1>
      <form class="form" action="/search" method="get">
        <input type="text" name="input" placeholder="Input your search here">
        <br>
        <br>
        <input type="submit" value="Search">
      </form>
      <br>
      <br>
      <br>




<table class="table">
  <thead class="thead-default">
    <tr>
      <th>#</th>
      <th>Date</th>
      <th>POST</th>

    </tr>
  </thead>
  <% if (jsonData.length > 0){ %>
    <%for (var i = 0; i < jsonData.length; i++ ){%>
    <tr>
      <td><%=i + 1%></td>
      <td scope="row"><%= jsonData[i].created_at.split(' ').splice(0,4).toString() %></td>
      <td scope="row"><%= jsonData[i].text %></td>
    </tr>
    <% } %>
  <% } else{ %>
    <%for (var j = 0; j < jsonData.statuses.length;j++ ){%>
    <tr>
      <td><%=j + 1%></td>
      <td scope="row"><%= jsonData.statuses[j].created_at.split(' ').splice(0,4).toString() %></td>
      <td scope="row"><%= jsonData.statuses[j].text %></td>
    </tr>
    <% } %>
  <% }%>

</table>
    </div>
